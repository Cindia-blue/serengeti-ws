    {
      "name": "data",
      "roles": [
        "hadoop_datanode"
      ],
      "instanceNum": 4,
      "cpuNum": 1,
      "memCapacityMB": 3748,	
      "storage": {
        "type": "LOCAL",
        "sizeGB": 50
      },
      "haFlag": "off"
    },
    {
      "name": "compute",
      "roles": [
        "hadoop_nodemanager"
      ],
      "instanceNum": 8,
      "cpuNum": 2,
      "memCapacityMB": 7500,

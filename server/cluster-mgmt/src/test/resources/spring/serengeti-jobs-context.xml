<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/batch"
   xmlns:beans="http://www.springframework.org/schema/beans" xmlns:aop="http://www.springframework.org/schema/aop"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
   http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd
   http://www.springframework.org/schema/batch
   http://www.springframework.org/schema/batch/spring-batch.xsd
   http://www.springframework.org/schema/aop
   http://www.springframework.org/schema/aop/spring-aop.xsd">

   <beans:bean id="jobListener"
      class="com.vmware.bdd.service.job.SimpleJobExecutionListener">
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean id="stepListener"
      class="com.vmware.bdd.service.job.SimpleStepExecutionListener">
      <beans:property name="jobRegistry" ref="jobRegistry" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean id="clusterJobListener"
      class="com.vmware.bdd.service.job.ClusterJobExecutionListener">
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
      <beans:property name="clusteringService" ref="clusteringService" />
   </beans:bean>
   <beans:bean id="resizeClusterJobListener"
      class="com.vmware.bdd.service.job.ResizeClusterJobExecutionListener">
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
      <beans:property name="clusteringService" ref="clusteringService" />
   </beans:bean>

   <beans:bean name="createClusterPlanTasklet"
      class="com.vmware.bdd.service.job.CreateClusterPlanStep">
      <beans:property name="clusteringService" ref="clusteringService" />
      <beans:property name="configMgr" ref="clusterConfigMgr" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="createClusterVMTasklet"
      class="com.vmware.bdd.service.job.CreateClusterVMStep">
      <beans:property name="clusteringService" ref="clusteringService" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="updateClusterDataTasklet"
      class="com.vmware.bdd.service.job.ClusterUpdateDataStep">
      <beans:property name="networkMgr" ref="networkService" />
   </beans:bean>
   <beans:bean name="deleteClusterVMTasklet"
      class="com.vmware.bdd.service.job.DeleteClusterVMStep">
      <beans:property name="clusteringService" ref="clusteringService" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="deleteClusterDataTasklet"
      class="com.vmware.bdd.service.job.DeleteClusterNodeStep">
      <beans:property name="networkMgr" ref="networkService" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="startClusterVMTasklet"
      class="com.vmware.bdd.service.job.StartClusterVMStep">
      <beans:property name="clusteringService" ref="clusteringService" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="stopClusterVMTasklet"
      class="com.vmware.bdd.service.job.StopClusterVMStep">
      <beans:property name="clusteringService" ref="clusteringService" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="clusterNodeSyncupTasklet"
      class="com.vmware.bdd.service.job.ClusterNodeSyncupStep">
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="resizeClusterRemoveBadNodeTasklet"
      class="com.vmware.bdd.service.job.ResizeClusterRemoveBadNodeStep">
      <beans:property name="clusteringService" ref="clusteringService" />
      <beans:property name="configMgr" ref="clusterConfigMgr" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="resumeClusterRemoveBadNodeTasklet"
      class="com.vmware.bdd.service.job.ResumeClusterRemoveBadNodeStep">
      <beans:property name="clusteringService" ref="clusteringService" />
      <beans:property name="configMgr" ref="clusterConfigMgr" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="resumeResizeClusterPlanTasklet"
      class="com.vmware.bdd.service.job.ResumeResizeClusterPlanStep">
      <beans:property name="clusteringService" ref="clusteringService" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="softwareCreateClusterTasklet"
      class="com.vmware.bdd.service.job.software.SoftwareManagementStep">
      <beans:property name="clusterManager" ref="clusterManager" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
      <beans:property name="clusterEntityMgr" ref="clusterEntityManager" />
      <beans:property name="managementOperation" value="CREATE" />
   </beans:bean>
   <beans:bean name="softwareDeleteClusterTasklet"
      class="com.vmware.bdd.service.job.software.SoftwareManagementStep">
      <beans:property name="clusterManager" ref="clusterManager" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
      <beans:property name="clusterEntityMgr" ref="clusterEntityManager" />
      <beans:property name="managementOperation" value="DESTROY" />
   </beans:bean>
   <beans:bean name="softwareBootstrapClusterTasklet"
      class="com.vmware.bdd.service.job.software.SoftwareManagementStep">
      <beans:property name="clusterManager" ref="clusterManager" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
      <beans:property name="clusterEntityMgr" ref="clusterEntityManager" />
      <beans:property name="managementOperation" value="CONFIGURE" />
   </beans:bean>
   <beans:bean name="softwareEnableOperationFlagTasklet"
      class="com.vmware.bdd.service.job.software.SoftwareManagementStep">
      <beans:property name="clusterManager" ref="clusterManager" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
      <beans:property name="clusterEntityMgr" ref="clusterEntityManager" />
      <beans:property name="managementOperation" value="ENABLE_OPERATION_FLAG" />
   </beans:bean>
   <beans:bean name="softwareQueryClusterTasklet"
      class="com.vmware.bdd.service.job.software.SoftwareManagementStep">
      <beans:property name="clusterManager" ref="clusterManager" />
      <beans:property name="jobExecutionStatusHolder"
         ref="jobExecutionStatusHolder" />
      <beans:property name="clusterEntityMgr" ref="clusterEntityManager" />
      <beans:property name="managementOperation" value="QUERY" />
   </beans:bean>
   <beans:bean name="setAutoElasticityTasklet"
      class="com.vmware.bdd.service.job.SetAutoElasticityStep">
      <beans:property name="executionService" ref="executionService" />
      <beans:property name="clusteringService" ref="clusteringService" />
      <beans:property name="jobExecutionStatusHolder" ref="jobExecutionStatusHolder" />
   </beans:bean>
   <beans:bean name="setManualElasticityTasklet"
      class="com.vmware.bdd.service.job.SetManualElasticityStep">
      <beans:property name="executionService" ref="executionService" />
      <beans:property name="jobExecutionStatusHolder" ref="jobExecutionStatusHolder" />
   </beans:bean>
   <job id="createClusterJob" job-repository="jobRepository">
      <step id="createClusterPlanStep" next="updateClusterDataStep1">
         <tasklet ref="createClusterPlanTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="updateClusterDataStep1" next="createVMStep">
         <tasklet ref="updateClusterDataTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="createVMStep" next="updateClusterDataStep2">
         <tasklet ref="createClusterVMTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="updateClusterDataStep2" next="setAutoElasticityStep">
         <tasklet ref="updateClusterDataTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="setAutoElasticityStep" next="softwareCreateClusterStep">
         <tasklet ref="setAutoElasticityTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="softwareCreateClusterStep">
         <tasklet ref="softwareCreateClusterTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="clusterJobListener" />
      </listeners>
   </job>
   <job id="deleteClusterJob" job-repository="jobRepository">
      <step id="deleteClusterVM" next="softwareDeleteClusterStep">
         <tasklet ref="deleteClusterVMTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="softwareDeleteClusterStep" next="deleteClusterData">
         <tasklet ref="softwareDeleteClusterTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="deleteClusterData">
         <tasklet ref="deleteClusterDataTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="clusterJobListener" />
      </listeners>
   </job>
   <job id="startClusterJob" job-repository="jobRepository">
      <step id="softwareEnableChefClientFlagStep" next="startClusterVM">
         <tasklet ref="softwareEnableOperationFlagTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="startClusterVM" next="startClusterNodeSyncup">
         <tasklet ref="startClusterVMTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="startClusterNodeSyncup" next="softwareBootstrapClusterStep">
         <tasklet ref="clusterNodeSyncupTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="softwareBootstrapClusterStep">
         <tasklet ref="softwareBootstrapClusterTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="clusterJobListener" />
      </listeners>
   </job>
   <job id="stopClusterJob" job-repository="jobRepository">
      <step id="stopClusterVM" next="stopClusterNodeSyncup">
         <tasklet ref="stopClusterVMTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="stopClusterNodeSyncup">
         <tasklet ref="clusterNodeSyncupTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="clusterJobListener" />
      </listeners>
   </job>
   <job id="resizeClusterJob" job-repository="jobRepository">
      <step id="resizeRemoveBadNodesStep" next="updateResizeClusterDataStep1">
         <tasklet ref="resizeClusterRemoveBadNodeTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="updateResizeClusterDataStep1" next="resizePlanStep">
         <tasklet ref="updateClusterDataTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="resizePlanStep" next="updateResizeClusterDataStep2">
         <tasklet ref="resumeResizeClusterPlanTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="updateResizeClusterDataStep2" next="resizeVMStep">
         <tasklet ref="updateClusterDataTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="resizeVMStep" next="updateResizeClusterDataStep3">
         <tasklet ref="createClusterVMTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="updateResizeClusterDataStep3" next="setAutoElasticityResizeStep">
         <tasklet ref="updateClusterDataTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="setAutoElasticityResizeStep" next="softwareResizeClusterStep">
         <tasklet ref="setAutoElasticityTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="softwareResizeClusterStep">
         <tasklet ref="softwareCreateClusterTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="resizeClusterJobListener" />
      </listeners>
   </job>
   <job id="resumeClusterJob" job-repository="jobRepository">
      <step id="removeBadNodeStep" next="updateResumeClusterDataStep1">
         <tasklet ref="resumeClusterRemoveBadNodeTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="updateResumeClusterDataStep1" next="resumePlanStep">
         <tasklet ref="updateClusterDataTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="resumePlanStep" next="updateResumeClusterDataStep2">
         <tasklet ref="resumeResizeClusterPlanTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="updateResumeClusterDataStep2" next="resumeCreateVMStep">
         <tasklet ref="updateClusterDataTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="resumeCreateVMStep" next="updateResumeClusterDataStep3">
         <tasklet ref="createClusterVMTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="updateResumeClusterDataStep3" next="setAutoElasticityResumeStep">
         <tasklet ref="updateClusterDataTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="setAutoElasticityResumeStep" next="softwareResumeClusterStep">
         <tasklet ref="setAutoElasticityTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>

      <step id="softwareResumeClusterStep">
         <tasklet ref="softwareCreateClusterTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="clusterJobListener" />
      </listeners>
   </job>
   <job id="configClusterJob" job-repository="jobRepository">
      <step id="setAutoElasticityConfigStep" next="softwareConfigClusterStep">
         <tasklet ref="setAutoElasticityTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <step id="softwareConfigClusterStep">
         <tasklet ref="softwareBootstrapClusterTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="clusterJobListener" />
      </listeners>
   </job>
   <job id="setAutoElasticityJob" job-repository="jobRepository">
      <step id="setAutoElasticityJobStep">
         <tasklet ref="setAutoElasticityTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="clusterJobListener" />
      </listeners>
   </job>
   <job id="setManualElasticityJob" job-repository="jobRepository">
      <step id="setManualElasticityStep">
         <tasklet ref="setManualElasticityTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="clusterJobListener" />
      </listeners>
   </job>
   <job id="queryClusterJob" job-repository="jobRepository">
      <step id="softwareQueryClusterStep">
         <tasklet ref="softwareQueryClusterTasklet" />
         <listeners>
            <listener ref="stepListener" />
         </listeners>
      </step>
      <listeners>
         <listener ref="clusterJobListener" />
      </listeners>
   </job>
</beans:beans>

{
  "distro":"mapr",
  "groups":[
    {
      "name":"master",
      "roles":[
        "mapr_cldb", 
        "mapr_nfs",
        "mapr_fileserver",
        "mapr_jobtracker",
        "mapr_tasktracker",
        "mapr_webserver",
        "mapr_metrics"
      ],
	  "instance_type":MEDIUM,
      "instance_num":3,
      "ha":"on"
    },
    {
      "name":"worker",
      "roles":[
        "mapr_nfs",
        "mapr_fileserver",
        "mapr_tasktracker"
      ],
	  "instance_type":MEDIUM,
      "instance_num":3,
      "ha":"off"
    },
    {
      "name":"client",
      "roles":[
        "mapr_client",
        "mapr_pig",
        "mapr_hive"
      ],
      "instance_type":MEDIUM,
      "instance_num":1,
      "ha":"off"
    },
    {
      "name":"zookeeper",
      "roles":[
        "mapr_zookeeper"
      ],
	  "instance_type":SMALL,
      "instance_num":3,
      "ha":"on"
    },
    {
      "name":"mysql",
      "roles":[
        "mapr_mysql_server"
      ],
	  "instance_type":SMALL,
      "instance_num":1,
      "ha":"off"
    }
  ]
}

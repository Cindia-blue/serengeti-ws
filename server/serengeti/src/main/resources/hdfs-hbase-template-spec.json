{
  "distro":"apache",
  "groups":[
  	{
      "name":"zookeeper",
      "roles":[
        "zookeeper"
      ],
      "instance_type":SMALL,
      "instance_num":3,
      "ha":"off"
    },
    {
      "name":"master",
      "roles":[
        "hadoop_namenode",
        "hbase_master"
      ],
      "instance_type":MEDIUM,
      "instance_num":1,
      "ha":"on"
    },
    {
      "name":"worker",
      "roles":[
        "hadoop_datanode",
        "hbase_regionserver"
      ],
      "instance_type":SMALL,
      "instance_num":3,
      "ha":"off"
    },
    {
      "name":"client",
      "roles":[
        "hadoop_client",
        "hbase_client"
      ],
      "instance_type":SMALL,
      "instance_num":1,
      "ha":"off"
    }
  ],
  "configuration": {
    "zookeeper": {
      "java.env": {
        "jvm_option": "-Xmx2g"
      }
    }
  }
}

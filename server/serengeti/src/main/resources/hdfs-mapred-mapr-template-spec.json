{
  "distro":"mapr",
  "groups":[
    {
      "name":"master",
      "roles":[
       "mapr_cldb", 
       "mapr_jobtracker",
       "mapr_nfs",
       "mapr_webserver",
       "mapr_fileserver",
       "mapr_tasktracker",
       "mapr_metrics",
       "mapr_mysql_client"
      ],
      "instance_type":MEDIUM,
      "instance_num":2,
      "ha":"on"
    },
    {
      "name":"worker",
      "roles":[
        "mapr_fileserver",
        "mapr_tasktracker",
        "mapr_nfs"
      ],
      "instance_type":SMALL,
      "instance_num":3,
      "ha":"off"
    },
    {
      "name":"client",
      "roles":[
		"mapr_node", 
		"mapr_pig",
		"mapr_hive",
		"hive_server"
      ],
      "instance_type":SMALL,
      "instance_num":1,
      "ha":"off"
    },
    {
      "name":"zookeeper",
      "roles":[
		"mapr_zookeeper"
      ],
      "instance_type":SMALL,
      "instance_num":3,
      "ha":"off"
    },
    {
      "name":"mysql-server",
      "roles":[
		"mapr_mysql_server"
      ],
      "instance_type":SMALL,
      "instance_num":1,
      "ha":"off"
    }
  ]
}

<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

   <mvc:annotation-driven />
   <context:component-scan base-package="com.vmware.bdd.rest" />

    <bean id="dataCollectorAdvice" class="com.vmware.bdd.aop.rest.DataCollectorAdvice"></bean>

    <aop:config>
        <aop:pointcut id="restCallPointcut"
                      expression="@annotation(com.vmware.bdd.aop.annotation.RestCallPointcut)" />
        <aop:aspect id="dataCollectorAspect" ref="dataCollectorAdvice" >
            <aop:after method="afterRestCallMethod" pointcut-ref="restCallPointcut" />
        </aop:aspect>
    </aop:config>
    <aop:aspectj-autoproxy>
        <aop:include name="dataCollectorAdvice"/>
    </aop:aspectj-autoproxy>

    <mvc:interceptors>
        <bean class="com.vmware.bdd.rest.interceptor.RestLogInterceptor" />
    </mvc:interceptors>

    <!--AOP aspect for dump REST CALLs on unhandled exceptions-->
    <bean id="unhandledRestExceptionLogging" class="com.vmware.bdd.aop.rest.UnhandledExceptionLoggingAspect"/>

    <aop:config>
        <aop:aspect id="unhandledExceptionAspect" ref="unhandledRestExceptionLogging" >
            <aop:after-throwing method="logRestArgsOnUnhandledException"
                                throwing="e" pointcut="execution(public * com.vmware.bdd.rest.RestResource.*(..)) or execution(public * com.vmware.bdd.rest.MgmtVMConfigController.*(..)) or execution(public * com.vmware.bdd.rest.UserMgmtServerController.*(..))"/>
        </aop:aspect>
    </aop:config>
    <aop:aspectj-autoproxy />
</beans>
{
  "name": "hadoop",
  "groups": [
    {
      "name": "master",
      "roles": [
        "hadoop_namenode",
        "hadoop_jobtracker"
      ],
      "instance_num": 1,
      "storage": {
        "type": "shared",
        "size": 50
      },
      "cpu": 2,
      "memory": 7500,
      "ha": "on",
      "vm_folder_path": "SERENGETI-vApp-sp3/hadoop/master"
    },
    {
      "name": "worker",
      "roles": [
        "hadoop_datanode",
        "hadoop_tasktracker"
      ],
      "instance_num": 6,
      "storage": {
        "type": "local",
        "size": 30,
        "split_policy" : "EVEN_SPLIT"
      },
      "placement_policies" : {
        "instance_per_host" :2
      },
      "cpu": 1,
      "memory": 3748,
      "ha": "off",
      "vm_folder_path": "SERENGETI-vApp-sp3/hadoop/worker"
    },
    {
      "name": "client",
      "roles": [
        "hive",
        "hadoop_client",
        "hive_server",
        "pig"
      ],
      "instance_num": 1,
      "storage": {
        "type": "shared",
        "size": 50,
        "split_policy" : "BI_SECTOR"
      },
      "cpu": 1,
      "memory": 3748,
      "ha": "off",
      "vm_folder_path": "SERENGETI-vApp-sp3/hadoop/client"
    }
  ],
  "distro": "apache",
  "vc_clusters": [
    {
      "name": "cluster-ws",
      "vc_rps": [
